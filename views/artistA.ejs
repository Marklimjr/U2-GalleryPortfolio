<div>
    <% artworks.forEach(a => { %>      
        
        <a><%= a.workUrl %></a>
        <br>
        <h3>Title:</h3>
        <h3><%= a.title %></h3>
        <br>
        <h3>Location:</h3>
        <h3><%- a.location.map (p => 
            `<h3>${p.currentLocation}</h3>`
          ).join('') %></h3>
        <br>
        <% const artworksLink = `/artistA/${a._id}`%>
        <a href="<%=artworksLink%>">Edit Post</a> 
        <a>Location Info</a>

        <br>
        <br>
        <br>
        <br>
    <% }) %>


</div>

