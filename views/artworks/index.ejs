<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>All Exhibitions</title>
    
</head>
<%- include('../partials/header') %>

<body>
    <% artworks.forEach(function(a){ %>
    <img src="<%= a.artworkUrl%>" style="width:800px;height:400px;"></img>
    <h4><%= a.artistName%></h4>
    <h4><%= a.artworkDate%></h4>

    <% const artworksLink = `/artworks/${a._id}`%>
    <a href="<%=artworksLink%>">EDIT</a>
 
    <form action="/artworks/<%=a._id%>?_method=DELETE" method="post">
        <button>DELETE</button>
    </form>
     


    <% }); %>    
    
</body>
</html>